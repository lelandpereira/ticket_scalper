<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All events
    </h1>

    <a href="/events/new" class="btn btn-block btn-outline-secondary">
      Add a new event
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "event_templates/events_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Start time
        </th>

        <th>
          Description
        </th>

        <th>
          Message sent
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @events.each do |event| %>
      <tr>
        <td>
          <%= event.id %>
        </td>

        <td>
          <% if event.username.present? %>
            <a href="/users/<%= event.username.id %>">
              <%= event.username.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= event.start_time %>
        </td>

        <td>
          <%= event.description %>
        </td>

        <td>
          <%= event.message_sent %>
        </td>

        <td>
          <%= time_ago_in_words(event.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(event.updated_at) %> ago
        </td>

        <td>
          <a href="/events/<%= event.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @events, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
